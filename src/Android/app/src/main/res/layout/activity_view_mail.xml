<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:paddingTop="0dp">

    <!-- Barre supérieure style Gmail -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/viewmail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:minHeight="?attr/actionBarSize" />

    <!-- En-tête du mail -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Sujet du mail -->
        <TextView
            android:id="@+id/text_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="21sp"
            android:textColor="#222222"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="16dp" />

        <!-- Ligne expéditeur + avatar + date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Avatar circulaire -->
            <TextView
                android:id="@+id/text_avatar"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/bg_circle"
                android:textColor="#ffffff"
                android:layout_marginEnd="12dp" />

            <!-- Nom de l'expéditeur et email -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/text_sender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#111111"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_sender_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="#888888" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Corps du mail -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:padding="20dp">

        <TextView
            android:id="@+id/text_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="#2B2B2B"
            android:lineSpacingExtra="4dp" />
    </ScrollView>

    <!-- Action buttons Reply/Forward at the bottom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:padding="16dp"
        android:elevation="8dp"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_reply"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_reply_style"
            android:drawableStart="@drawable/ic_reply"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:text="Reply"
            android:textColor="#5f6368"
            android:textSize="14sp"
            android:textStyle="normal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textAllCaps="false"
            android:stateListAnimator="@null"
            android:theme="@android:style/Theme.Material.Light" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_forward"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="@drawable/button_reply_style"
            android:drawableStart="@drawable/ic_forward"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:text="Forward"
            android:textColor="#5f6368"
            android:textSize="14sp"
            android:textStyle="normal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textAllCaps="false"
            android:stateListAnimator="@null"
            android:theme="@android:style/Theme.Material.Light" />
    </LinearLayout>
</LinearLayout>
