<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">


            <TextView
                android:id="@+id/registerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "@string/signup_tvTitle"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="24dp" />


            <!-- First Name -->
            <EditText
                android:id="@+id/et_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/signup_et_firstName"
                android:inputType="textPersonName"
                android:layout_marginBottom="16dp"
                android:padding="12dp" />
<!--                android:text="@={vm.form.value.firstName}" />-->

            <!-- Last Name -->
            <EditText
                android:id="@+id/et_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/signup_et_last_name"
                android:inputType="textPersonName"
                android:layout_marginBottom="16dp"
                android:padding="12dp" />

            <!-- Gender -->
            <Spinner
                android:id="@+id/gender_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:entries="@array/gender_options"
                android:prompt="@string/gender_prompt"
                android:layout_marginBottom="16dp"
                android:padding="12dp"
                 />

            <!-- Birth Date -->
            <EditText
                android:id="@+id/birth_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Birth Date (MM/DD/YYYY)"
                android:layout_marginBottom="16dp"
                android:padding="12dp"
                android:inputType="date"
                />

            <!-- Username -->
            <EditText
                android:id="@+id/et_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/signup_et_username"
                android:layout_marginBottom="16dp"
                android:padding="12dp"
                android:inputType="text" />

            <!-- Password -->
            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/signup_et_password"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:textColorHint="#CCCCCC"
                android:textSize="20sp"
                android:layout_marginBottom="16dp" />

            <!-- Confirm Password -->
            <EditText
                android:id="@+id/confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:padding="12dp"
                android:hint="Confirm Password"
                android:inputType="textPassword" />

<!--            <Button-->
