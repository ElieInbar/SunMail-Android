<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:cardCornerRadius="16dp"
    android:elevation="2dp"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="72dp"
        android:padding="14dp">

        <!-- Avatar (premiÃ¨re lettre) -->
        <TextView
            android:id="@+id/text_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="M"
            android:textColor="#FFF"
            android:textSize="18sp"
            android:background="@drawable/bg_circle"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/text_avatar"
            android:layout_marginStart="12dp"
            android:textColor="#212121"
            android:textStyle="bold"
            android:textSize="15sp" />


        <!-- Sujet -->
        <TextView
            android:id="@+id/text_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_sender"
            android:layout_alignStart="@id/text_sender"
            android:layout_marginTop="2dp"
            android:textColor="#212121"
            android:textSize="15sp"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Snippet -->
        <TextView
            android:id="@+id/text_snippet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_subject"
            android:layout_alignStart="@id/text_subject"
            android:layout_marginTop="2dp"
            android:textColor="#757575"
            android:textSize="13sp"
            android:maxLines="1"
            android:ellipsize="end" />

<!--        <ImageView-->
<!--            android:id="@+id/image_star"-->
<!--            android:layout_width="32dp"-->
<!--            android:layout_height="32dp"-->
<!--            android:layout_alignParentEnd="true"-->
<!--            android:layout_below="@id/text_time"-->
<!--&lt;!&ndash;            android:src="@drawable/ic_star_border_24"&ndash;&gt;-->
<!--            android:contentDescription="starred"-->
<!--            android:padding="4dp"/>-->
    </RelativeLayout>
</androidx.cardview.widget.CardView>
