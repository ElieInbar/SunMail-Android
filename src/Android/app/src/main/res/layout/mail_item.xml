<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:cardCornerRadius="24dp"
    app:cardBackgroundColor="?attr/colorSurfaceVariant"
    android:elevation="2dp"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="72dp"
        android:padding="14dp">

        <TextView
            android:id="@+id/text_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:background="@drawable/avatar_background"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/text_avatar"
            android:layout_marginStart="12dp"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/text_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_sender"
            android:layout_alignStart="@id/text_sender"
            android:layout_marginTop="2dp"
            android:textColor="?attr/colorOnSurface"
            android:textSize="15sp"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/text_snippet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_subject"
            android:layout_alignStart="@id/text_subject"
            android:layout_marginTop="2dp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="13sp"
            android:maxLines="1"
            android:ellipsize="end" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
